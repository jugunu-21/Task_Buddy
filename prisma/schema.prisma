// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {P
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model Task {
  id          String      @id @default(cuid())
  title       String
  description String
  category    String      
  dueDate     DateTime
  completed   Boolean           
  userId      String      // To associate tasks with users
}
