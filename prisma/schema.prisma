// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String      @id @default(cuid())
  title       String
  description String
  category    String      
  dueDate     DateTime
  status      String      @default("todo")  // Can be "todo", "in-progress", "completed"
  userId      String      // To associate tasks with users
  activities  ActivityLog[] @relation("TaskActivities")
}

model ActivityLog {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation("TaskActivities", fields: [taskId], references: [id], onDelete: Cascade)
  action    String   // e.g., "created", "updated", "deleted"
  changes   Json?    // Store changes in JSON format
  timestamp DateTime @default(now())
  userId    String   // To track who made the change
}
